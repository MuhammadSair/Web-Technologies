<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>HR Dashboard</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css">
</head>

<body>
    <%- include(partials + 'navbar.ejs' ) %>
        <div class="container" style="margin-top: 10rem; margin-left: 20rem;">
            <h1>List of Employees</h1>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">Name</th>
                        <th scope="col">Email</th>
                        <th scope="col">Role</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% employees.forEach(employee=> { %>
                        <tr>
                            <td>
                                <%= employee.name %>
                            </td>
                            <td>
                                <%= employee.email %>
                            </td>
                            <td>
                                <%= employee.role %>
                            </td>
                            <td>
                                <a href="/hr/view-employee/<%= employee._id %>" class="btn btn-sm btn-success">View</a>
                                <a href="/hr/edit-employee/<%= employee._id %>" class="btn btn-sm btn-primary">Edit</a>
                                <button class="btn btn-sm btn-danger"
                                    onclick="confirmDelete('<%= employee._id %>')">Delete</button>
                            </td>
                        </tr>
                        <% }) %>
                </tbody>
            </table>
            <a href="/hr/add-employee" class="btn btn-primary">Add New Employee</a>
        </div>
        <script>
            function confirmDelete(id) {
                window.location.href = `/hr/delete-employee/${id}`;
            }
        </script>
        <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>