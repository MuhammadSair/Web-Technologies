<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>List HRs</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css">
</head>

<body>
    <%- include(partials + 'navbar.ejs' ) %>
        <div class="container" style="margin-top: 10rem; margin-left: 20rem;">
            <h1>List of HRs</h1>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">Name</th>
                        <th scope="col">Email</th>
                        <th scope="col">Department</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% hrs.forEach(hr=> { %>
                        <tr>
                            <td>
                                <%= hr.name %>
                            </td>
                            <td>
                                <%= hr.email %>
                            </td>
                            <td>
                                <%= hr.department %>
                            </td>
                            <td>
                                <a href="/admin/edit-hr/<%= hr._id %>" class="btn btn-sm btn-primary">Edit</a>
                                <a href="/admin/delete-hr/<%= hr._id %>" class="btn btn-sm btn-danger">Delete</a>
                                <a href="/admin/view-hr/<%= hr._id %>" class="btn btn-sm btn-info">View</a>
                            </td>
                        </tr>
                        <% }) %>
                </tbody>
            </table>
            <a href="/admin/add-hr" class="btn btn-success mb-3">Add New HR</a>
        </div>
        <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>