<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Employee</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css">
</head>

<body>
    <%- include(partials + 'navbar.ejs' ) %>
        <div class="container" style="margin-top: 10rem; margin-left: 20rem;">
            <% if (typeof query!=='undefined' && query.error==='emailExists' ) { %>
                <div class="alert alert-danger" role="alert">An employee with this email already exists.</div>
                <% } else if (typeof query!=='undefined' && query.error==='internalError' ) { %>
                    <div class="alert alert-danger" role="alert">Failed to add new employee due to an internal error.
                    </div>
                    <% } else if (typeof query!=='undefined' && query.success==='employeeAdded' ) { %>
                        <div class="alert alert-success" role="alert">New employee added successfully.</div>
                        <% } %>
                            <h1>Add New Employee</h1>
                            <form action="/admin/add-employee" method="post">
                                <div class="form-group">
                                    <label for="name">Name:</label>
                                    <input type="text" class="form-control" id="name" name="name">
                                </div>
                                <div class="form-group">
                                    <label for="email">Email:</label>
                                    <input type="email" class="form-control" id="email" name="email">
                                </div>
                                <div class="form-group">
                                    <label for="role">Role:</label>
                                    <input type="text" class="form-control" id="role" name="role">
                                </div>
                                <div class="form-group">
                                    <label for="salary">Salary:</label>
                                    <input type="number" class="form-control" id="salary" name="salary">
                                </div>
                                <div class="form-group">
                                    <label for="department">Department:</label>
                                    <select class="form-control" id="department" name="department">
                                        <option value="">Select Department</option>
                                        <option value="HR">HR</option>
                                        <option value="IT">IT</option>
                                        <option value="Finance">Finance</option>
                                    </select>
                                </div>
                                <button type="submit" class="btn btn-primary">Add Employee</button>
                                <a href="/admin/list-employees" class="btn btn-secondary">Cancel</a>

                            </form>
        </div>
        <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>